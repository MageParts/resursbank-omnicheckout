<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="checkout_cart_index" />

    <head>
        <title>
            Checkout
        </title>
        <css src="Resursbank_OmniCheckout::style.css" after="-"/>
        <link src="Resursbank_OmniCheckout::checkout.js" after="-"/>
    </head>
    <body>
        <referenceContainer name="content">
            <block class="Resursbank\OmniCheckout\Block\Main" template="Resursbank_OmniCheckout::main.phtml"/>
            <block class="Resursbank\OmniCheckout\Block\Carriers" template="Resursbank_OmniCheckout::carriers.phtml"/>
        </referenceContainer>

        <referenceContainer name="before.body.end">
            <block class="Resursbank\OmniCheckout\Block\Js" template="Resursbank_OmniCheckout::js.phtml" />
        </referenceContainer>

        <!-- Remove blocks -->
        <referenceBlock name="checkout.cart.coupon" remove="true"/>
        <referenceBlock name="cart.summary" remove="true"/>
        <referenceBlock name="checkout.cart.crosssell" remove="true"/>
    </body>
</page>
